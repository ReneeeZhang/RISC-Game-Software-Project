<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="mainView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.duke.ece651.risc.client.controller.GameController">
   <right>
      <VBox fx:id="right" prefHeight="563.0" prefWidth="160.0" BorderPane.alignment="CENTER">
         <children>
            <Circle fx:id="color" fill="DODGERBLUE" radius="13.0" stroke="BLACK" strokeType="INSIDE">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </VBox.margin>
            </Circle>
            <Label fx:id="info" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="108.0" prefWidth="135.0" text="Label" wrapText="true" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
            </Label>
            <ChoiceBox fx:id="actionChoice" prefHeight="27.0" prefWidth="134.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
            </ChoiceBox>
            <VBox fx:id="action" prefHeight="200.0" prefWidth="100.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
            </VBox>
            <Button mnemonicParsing="false" onAction="#doAdd" prefHeight="27.0" prefWidth="77.0" style="-fx-background-color: #87CEFA#87CEFA;" text="Add" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
            </Button>
            <Region prefHeight="326.0" prefWidth="160.0" VBox.vgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#doDone" prefHeight="27.0" prefWidth="77.0" style="-fx-background-color: #e03737#e03737;" text="Done" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
   <top>
      <TabPane fx:id="games" prefHeight="33.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
<!--          <Tab fx:id = "1" text="Game 1" />-->
            <Tab fx:id="newGame" onSelectionChanged="#createNewGame" text="New Game">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="67.0" prefWidth="900.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </top>
   <center>
      <Group fx:id="group" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
